<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TitleBar">
        <item name="android:background">@color/base_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="ConfirmDialog" parent="@android:style/Theme.Holo.Dialog.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="CommonDialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="CommonFillBtn">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:background">@drawable/btn_fill_bg</item>
    </style>

    <style name="CommonEditText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/base_color</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:background">@drawable/et_corner_select_bg</item>
    </style>

    <style name="BoardOptionBtn">
        <item name="android:width">@dimen/board_option_btn_size</item>
        <item name="android:height">@dimen/board_option_btn_size</item>
        <item name="android:button">@null</item>
    </style>

    <style name="TextIconBtn">
        <item name="android:onClick">onViewClick</item>
        <item name="android:orientation">vertical</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
    </style>

    <style name="ButtomDialog" parent="@android:style/Theme.Holo.Dialog">
        <!-- �Ƿ��б߿� -->
        <item name="android:windowFrame">@null</item>
        <!-- �Ƿ�������Activity֮�� -->
        <item name="android:windowIsFloating">true</item>
        <!-- ���� -->
        <item name="android:windowNoTitle">true</item>
        <!-- ��Ӱ -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- ��͸�� -->
        <!-- ����͸�� -->
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
</resources>